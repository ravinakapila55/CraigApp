<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="@color/card_yellow" />
            <corners android:topLeftRadius="@dimen/_10sdp"
                android:topRightRadius="@dimen/_10sdp"/>
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:bottom="2dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/card_yellow"/>
            <corners
                android:topLeftRadius="@dimen/_10sdp"
                android:topRightRadius="@dimen/_10sdp"/>
            <stroke android:color="@color/card_yellow" android:width="0.5dp"/>
        </shape>
    </item>
</layer-list>