<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/home_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/card_red"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/rel_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp">

            <ImageView
                android:id="@+id/iv_clock"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/clock"
                android:tint="@color/white"/>

            <com.helper.Helper2Go.custom.CustomTextViewRegular
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="2 day job"
                android:layout_toRightOf="@+id/iv_clock"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_8ssp"/>

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avtar"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_centerVertical="true" />

        <com.helper.Helper2Go.custom.CustomTextViewBold
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/rel_time"
            android:id="@+id/tv_about_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_toRightOf="@+id/iv_avtar"
            android:text="Lorem Ipsum dolar sit smet"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp" />

        <com.helper.Helper2Go.custom.CustomTextViewRegular
            android:id="@+id/tvt_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_below="@+id/tv_about_heading"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_toRightOf="@+id/iv_avtar"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua "
            android:textSize="@dimen/_9ssp"
            android:maxLines="2"
            android:textColor="@color/white"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>
