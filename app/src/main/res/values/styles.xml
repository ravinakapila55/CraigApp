<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@null</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
    </style>

    <style name="app_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/app_button_bg</item>
        <item name="android:layout_marginBottom">10dp</item>

    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_down_animation</item>
    </style>

    <style name="AppThemes" parent="Theme.AppCompat">
        <item name="colorAccent">#edb60b</item>
    </style>

    <style name="mySpinnerItemStyleForper" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:dropDownHeight">100dp</item>
        <item name="android:textSize">@dimen/_7ssp</item>

    </style>

    <style name="edt_search">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:hint">@string/search_job</item>
        <item name="android:background">@drawable/search_bg</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:drawableLeft">@drawable/search_icon</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="DatePickerAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
    </style>

    <style name="Myslider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/My_Tooltip</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="My_Tooltip" parent="@style/TextAppearance.MaterialComponents.Tooltip">
        <!-- background color of the Tooltip -->
        <item name="backgroundTint">@color/app_color</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <!-- color used by the text in the Tooltip -->
        <item name="colorOnPrimary">@color/grey</item>
    </style>

    <style name="tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="shapeAppearanceOverlay">@style/tooltipShOverylay</item>
        <item name="backgroundTint">@color/app_color</item>
    </style>

    <style name="tooltipShOverylay">
        <item name="cornerSize">50%</item>
    </style>


    <array name="initial_slider_values">
        <item>0.0</item>
        <item>100000.0</item>
    </array>
</resources>
